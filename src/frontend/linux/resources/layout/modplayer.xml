<LinearContainer
    background="#FB7D11"
    orientation="vertical"
    padding="10pt"
    width="match_parent"
    height="match_parent">
    <xtvapps.simusplayer.core.lcd.LcdScreenWidget
        id="lcd"
        width="match_parent"
        height="wrap_content"
        orientation="vertical"
        onColor="#371C01"
        offColor="#D1690D">
        <xtvapps.simusplayer.core.lcd.LcdSegmentWidget
            id="lcdModName"
            width="wrap_content"
            height="wrap_content"
            len="18" />
        
	    <xtvapps.simusplayer.core.widgets.WaveContainer
	        id="waves"
	        spacing="4pt"
	        padding="2pt"
	        waveBackground="#D1690D"
	        waveLinesColor="#371C01"
	        width="600pt"
	        height="240pt" />
	</xtvapps.simusplayer.core.lcd.LcdScreenWidget>
</LinearContainer>