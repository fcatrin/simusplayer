<xtvapps.simusplayer.core.lcd.LcdScreenWidget
       id="lcd"
       width="match_parent"
       height="match_parent"
       orientation="vertical"
       padding="20pt"
       background="@color/lcdBackground"
       pixelSize="3pt"
       pixelSpacing="1pt"
       onColor="@color/lcdPixelOn"
       offColor="@color/lcdPixelOff">
       <LinearContainer
           width="match_parent"
           height="wrap_content"
           marginBottom="4pt"
           orientation="horizontal">
           <TextWidget
               width="0pt"
               height="wrap_content"
               text="SONG NAME"
               padding="4pt"
               color="@color/lcdPixelOn" />
           <TextWidget
               width="wrap_content"
               height="wrap_content"
               text="MOD"
               padding="4pt"
               align="center"
               color="@color/lcdBackground"
               background="@drawable/lcd_rounded_on" />
           <TextWidget
               width="wrap_content"
               height="wrap_content"
               text="S3M"
               padding="4pt"
               align="center"
               color="@color/lcdBackground"
               marginLeft="4pt"
               background="@drawable/lcd_rounded_off" />
           <TextWidget
               width="wrap_content"
               height="wrap_content"
               text="MIDI"
               padding="4pt"
               align="center"
               color="@color/lcdBackground"
               marginLeft="4pt"
               background="@drawable/lcd_rounded_off" />
           
       </LinearContainer>
       <xtvapps.simusplayer.core.lcd.LcdSegmentWidget
           id="lcdModName"
           width="wrap_content"
           height="wrap_content"
           len="18" />
       
    <xtvapps.simusplayer.core.widgets.WaveContainer
        id="waves"
        spacing="4pt"
        padding="2pt"
        marginTop="10pt"
        waveBackground="@color/lcdPixelOff"
        waveLinesColor="@color/lcdPixelOn"
        width="300pt"
        height="120pt" />
</xtvapps.simusplayer.core.lcd.LcdScreenWidget>
